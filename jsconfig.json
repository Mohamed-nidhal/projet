{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",       // Ensure module system supports import.meta
    "target": "esnext",       // Target modern JavaScript
    "lib": ["es6", "dom"]     // Include necessary libraries
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}

